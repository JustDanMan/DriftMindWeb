@using Microsoft.Extensions.Options
@using DriftMindWeb.Configuration
@inject IOptions<AzureSignalROptions> AzureSignalROptions

<div class="signalr-status-card">
    <div class="card-header">
        <h6 class="mb-0">
            <i class="bi bi-broadcast"></i>
            SignalR Status
        </h6>
    </div>
    <div class="card-body">
        @{
            var options = AzureSignalROptions.Value ?? new AzureSignalROptions();
            var isAzureEnabled = options.IsValid;
            var mode = isAzureEnabled ? "Azure SignalR" : "Lokal";
        }
        
        <div class="status-item">
            <span class="status-label">Modus:</span>
            <span class="status-value @(isAzureEnabled ? "azure-mode" : "local-mode")">
                @mode
            </span>
        </div>
        
        <div class="status-item">
            <span class="status-badge @(isAzureEnabled ? "azure-enabled" : "local-mode")">
                <i class="bi @(isAzureEnabled ? "bi-cloud-check" : "bi-pc-display")"></i>
                @(isAzureEnabled ? "Skalierbar" : "Single Instance")
            </span>
        </div>
    </div>
</div>

<style>
    .signalr-status-card {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        border: 1px solid #374151;
        border-radius: 8px;
        margin-bottom: 1rem;
        font-size: 0.85rem;
    }

    .signalr-status-card .card-header {
        background: rgba(59, 130, 246, 0.1);
        border-bottom: 1px solid #374151;
        padding: 0.75rem 1rem;
        border-radius: 8px 8px 0 0;
    }

    .signalr-status-card .card-header h6 {
        color: #e2e8f0;
        font-weight: 600;
    }

    .signalr-status-card .card-body {
        padding: 0.75rem 1rem;
    }

    .status-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .status-item:last-child {
        margin-bottom: 0;
    }

    .status-label {
        color: #94a3b8;
        font-weight: 500;
    }

    .status-value {
        color: #e2e8f0;
        font-weight: 600;
    }

    .status-value.azure-mode {
        color: #60a5fa;
    }

    .status-value.local-mode {
        color: #fbbf24;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-badge.azure-enabled {
        background: rgba(34, 197, 94, 0.2);
        color: #22c55e;
        border: 1px solid rgba(34, 197, 94, 0.3);
    }

    .status-badge.local-mode {
        background: rgba(251, 191, 36, 0.2);
        color: #fbbf24;
        border: 1px solid rgba(251, 191, 36, 0.3);
    }

    /* Specific icon styles for this component only */
    .signalr-status-card .bi {
        font-size: 0.75rem;
    }
</style>
