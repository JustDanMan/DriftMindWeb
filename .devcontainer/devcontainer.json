{
  "name": "DriftMind Devcontainer",
  "image": "mcr.microsoft.com/devcontainers/dotnet:8.0",
  "containerEnv": {
    "ASPNETCORE_ENVIRONMENT": "Development"
  },
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-dotnettools.csharp"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/DriftMind,type=bind"
  ],
  "remoteUser": "vscode"
}